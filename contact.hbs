<div class="container-fluid mt-5 contact-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact Us</h1>
            <p class="text-center sub-heading">We will happy to help you :)</p>

            <div class="row ">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Full Name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Email addres</label>
                            <input type="email" class="form-control" id="exampleInputEmail"
                                placeholder="Enter your email" name="email">
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputContact">Phone</label>
                            <input type="number" class="form-control" id="exampleInputContact"
                                placeholder="Number" name="number">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputContact">Message</label>
                            <input type="message" class="form-control" id="exampleInputContact"
                                placeholder="Message" name="message">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        <button type="submit" class="btn btn-danger">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>